{
  "name": "mcpez",
  "version": "0.1.0",
  "description": "Minimal, ergonomic MCP server wrapper for TypeScript/Bun",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "bun run build --watch",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "lint": "biome lint .",
    "format": "biome format .",
    "format:write": "biome format . --write",
    "fix": "biome check --write .",
    "fix:unsafe": "biome check --write --unsafe ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@modelcontextprotocol/inspector": "^0.17.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.3.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "^20.11.30",
    "bun-types": "^1.3.0",
    "semantic-release": "^24.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnlindquist/mcpez.git"
  },
  "bugs": {
    "url": "https://github.com/johnlindquist/mcpez/issues"
  },
  "homepage": "https://github.com/johnlindquist/mcpez#readme"
}
